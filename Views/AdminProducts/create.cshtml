@model KonditoriPallasSite.Models.Product
@{
    ViewData["Title"] = "Ny produkt";
    var categories = (IEnumerable<KonditoriPallasSite.Models.Category>)ViewBag.Categories!;
}@using Microsoft.AspNetCore.Mvc.Rendering
<select asp-for="CategoryId" class="form-select"
        asp-items="@(new SelectList((IEnumerable<KonditoriPallasSite.Models.Category>)ViewBag.Categories, "Id", "Name"))">
    <option value="">— Välj kategori —</option>
</select>

<h2>Ny produkt</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kategori</label>
        <select asp-for="CategoryId" class="form-select"
                asp-items="new SelectList(categories, nameof(KonditoriPallasSite.Models.Category.Id), nameof(KonditoriPallasSite.Models.Category.Name))">
            <option value="">— Välj kategori —</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <button type="submit" class="btn btn-success">Spara</button>
    <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

