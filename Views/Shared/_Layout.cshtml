<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Konditori Pallas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Konditori Pallas</a>

            <!-- Hamburger-meny på mobil -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index" asp-route-category="Bageri">Bageri</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index" asp-route-category="Tårtor">Tårtor</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Lunch">Lunch</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">Om oss</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Kontakt</a></li>

                    <!-- Admin-länk – syns bara om man är inloggad -->
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    }
                </ul>

                <!-- Höger sida av menyn -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-2">Inloggad som <strong>@User.Identity.Name</strong></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="User" asp-action="SignOutUser">Logga ut</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-success" asp-controller="User" asp-action="Index">Logga in</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-4">
        <p>&copy; @DateTime.Now.Year Konditori Pallas</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
